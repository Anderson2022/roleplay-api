{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "files": [
    "node_modules/adonisjs-types/index.d.ts"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/mail",
      "@adonisjs/view",
      "@adonisjs/auth"
    ]
  }
}